---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
---

<BaseLayout title="Request an Audition | Bailey Doyal Voice Actor"; description="Get a custom voiceover audition. Send your copy and direction. Bailey delivers clean, broadcast-ready reads with fast turnaround and Source-Connect.">
  <Fragment slot="header">
    <SiteHeader />
  </Fragment>

  <section class="container" style="max-width:900px;">
    <h1>Auditions</h1>
    <p style="color:var(--muted); margin-top:-.25rem;">
      Share your direction, copy, and timing needs.
    </p>

    <form class="contact-form" action="https://formspree.io/f/mrboqqyw" method="POST" enctype="multipart/form-data">
      <!-- Name -->
      <div class="name-section" style="margin-bottom:1rem;">
        <h4 style="margin-bottom:0.5rem;">Name <span style="color:#f87171;">*</span></h4>
        <div style="display:grid; grid-template-columns:1fr 1fr; gap:0.75rem;">
          <label style="display:flex; flex-direction:column;">
            <input type="text" name="first_name" placeholder="First" required />
          </label>
          <label style="display:flex; flex-direction:column;">
            <input type="text" name="last_name" placeholder="Last" required />
          </label>
        </div>
      </div>

      <!-- Company -->
      <label>
        Company Name
        <input type="text" name="company" />
      </label>

      <!-- Email + Phone -->
      <div style="display:grid; grid-template-columns:1fr 1fr; gap:0.75rem;">
        <label>
          <h4 style="margin-bottom:0.5rem;">Email <span style="color:#f87171;">*</span></h4>
          <input type="email" name="email" required />
        </label>
        <label>
          <h4 style="margin-bottom:0.5rem;">Phone Number <span style="color:#f87171;">*</span></h4>
          <input type="tel" name="phone" required />
        </label>
      </div>

      <!-- Requested Turnaround -->
      <label>
        Requested Turn Around Time
        <input type="text" name="turnaround" placeholder="e.g., 24 hours, 48 hours, 3â€“5 days" />
      </label>

      <!-- Direction / Instructions -->
      <label>
        Please provide direction / instructions for how you'd like me to sound in this audition.
        <small style="color:var(--muted);">
          Feel free to reference any demos from my website if you are looking for a particular category or style
          of voicing (friendly, conversational, authoritative, etc.).
        </small>
        <textarea name="direction" rows="4"></textarea>
      </label>

      <!-- Voiceover Copy -->
      <label>
        Please provide your voiceover copy here
        <small style="color:var(--muted);">
          You may provide the entire script or a portion if you want a custom audition.
        </small>
        <textarea name="voiceover_copy" rows="6" placeholder="Paste your script text here"></textarea>
      </label>

      <!-- Optional file upload -->
      <label>
        Upload File (PDF, DOC, DOCX, TXT)
        <input type="file" name="script_file" accept=".pdf,.doc,.docx,.txt" />
      </label>

      <!-- Subject line for Formspree -->
      <input type="hidden" name="_subject" value="New Audition Request from Website" />

      <button class="btn primary" type="submit">Submit</button>
    </form>
  </section>

  <Fragment slot="footer">
    <SiteFooter />
  </Fragment>
</BaseLayout>
