---
import BaseLayout from "../layouts/BaseLayout.astro";
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import DemoPlayer from '../components/DemoPlayer.astro';
---
<BaseLayout title="Bailey Doyal | Professional Male Voice Actor for Commercial, Narration, and Character" description="Professional voice actor based in Southern California delivering commercial, narration, promo, and character voiceovers with Source-Connect and fast turnaround.">
  <Fragment slot="header">
    <SiteHeader />
  </Fragment>

  <section class="hero">
    <div class="hero-content">
      <div class="hero-copy">
        <h1>Clear. Engaging. Versatile.</h1>
        <p>Serving clients in Southern California and beyond, including Rosamond, Lancaster, Palmdale, the Antelope Valley, and Los Angeles County. Remote sessions available worldwide via Source-Connect.</p>
        <div class="cta-row">
          <a class="btn primary" href="/demos">Listen to Demos</a>
          <a class="btn" href="/contact">Contact Me</a>
        </div>
      </div>
      <div class="hero-headshot">
        <img src="/images/headshot.jpg" alt="Bailey Doyal headshot" />
      </div>
    </div>
  </section>

  <section class="demos-preview">
    <h2 class="center">Featured Demos</h2>
      <DemoPlayer title="Commercial" src="/audio/commercial_BaileyDoyal.mp3" />
      <DemoPlayer title="Narration" src="/audio/narration_BaileyDoyal.mp3" />
      <DemoPlayer title="Character" src="/audio/character_BaileyDoyal.mp3" />
      <DemoPlayer title="Promo" src="/audio/promo_BaileyDoyal.mp3" />
    </div>
    <div class="center" style="margin-top:1rem;">
      <a class="btn" href="/demos">Hear all Demos</a>
    </div>
  </section>

  <section class="services">
    <h2 class="center">Services</h2>
    <ul class="pill-list">
      <li>Commercial</li>
      <li>Video games</li>
      <li>Animation</li>
      <li>Narration</li>
      <li>Promo</li>
      <li>eLearning</li>
      <li>Explainers</li>
      <li>Corporate</li>
    </ul>
  </section>

  <Fragment slot="footer">
    <SiteFooter />
  </Fragment>
</BaseLayout>
