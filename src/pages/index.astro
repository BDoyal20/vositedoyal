---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import DemoPlayer from '../components/DemoPlayer.astro';
---
<BaseLayout title="Bailey Doyal â€¢ Voice Actor" description="Commercial, character, promo, and narration voice over with broadcast quality from Rosamond, CA.">
  <Fragment slot="header">
    <SiteHeader />
  </Fragment>

  <section class="hero">
    <div class="hero-content">
      <div class="hero-copy">
        <h1>Clear. Engaging. Versatile.</h1>
        <p>Commercial, character, promo, and narration. Fast delivery from a broadcast-ready home studio.</p>
        <div class="cta-row">
          <a class="btn primary" href="/demos">Listen to demos</a>
          <a class="btn" href="/contact">Get a quote</a>
        </div>
      </div>
      <div class="hero-headshot">
        <img src="/images/headshot.jpg" alt="Bailey Doyal headshot" />
      </div>
    </div>
  </section>

  <section class="demos-preview">
    <h2>Featured demos</h2>
    <h2 class="center">Featured demos</h2>
      <DemoPlayer title="Commercial" src="/audio/commercial.mp3" />
      <DemoPlayer title="Narration" src="/audio/narration.mp3" />
      <DemoPlayer title="Character" src="/audio/character.mp3" />
      <DemoPlayer title="Promo" src="/audio/promo.mp3" />
    </div>
    <div class="center" style="margin-top:1rem;">
      <a class="btn" href="/demos">Hear all demos</a>
    </div>
  </section>

  <section class="services">
    <h2 class="center">Services</h2>
    <ul class="pill-list">
      <li>Commercial</li>
      <li>Video games</li>
      <li>Animation</li>
      <li>Narration</li>
      <li>Promo</li>
      <li>eLearning</li>
      <li>Explainers</li>
      <li>Corporate</li>
    </ul>
  </section>

  <Fragment slot="footer">
    <SiteFooter />
  </Fragment>
</BaseLayout>
