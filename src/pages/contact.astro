---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
---
<BaseLayout title="Contact • Bailey Doyal" description="Book Bailey Doyal for your next project.">
  <Fragment slot="header">
    <SiteHeader />
  </Fragment>

  <section class="container">
    <h1>Contact</h1>
    <p>Email works best. Include project details like usage, length, deadlines, and direction preferences.</p>

    <ul class="contact-list">
      <li><strong>Email:</strong> <a href="mailto:bailey.doyal0@gmail.com">bailey.doyal0@gmail.com</a></li>
      <li><strong>X:</strong> <a href="https://x.com/Bailey_Doyal" target="_blank" rel="noopener">X.com</a></li>
      <li><strong>YouTube:</strong> <a href="https://www.youtube.com/@BaileyDoyal" target="_blank" rel="noopener">YouTube.com</a></li>
    </ul>

    <!-- Formspree -->
    <form class="contact-form" action="https://formspree.io/f/mblpglrr" method="POST">
      <label>
        Your name
        <input type="text" name="name" required />
      </label>
      <label>
        Your email
        <input type="email" name="email" required />
      </label>
      <label>
        Message
        <textarea name="message" rows="5" required></textarea>
      </label>

      <!-- optional extras -->
      <input type="hidden" name="_subject" value="New VO inquiry from website" />
      <!-- <input type="hidden" name="_redirect" value="https://your-domain.com/thanks" /> -->

      <button class="btn primary" type="submit">Send</button>
    </form>
  </section>

<Fragment slot="footer">
  <footer class="site-footer contact-footer">
    <div class="footer-grid">
      <!-- Left: Contact Info -->
      <div class="footer-contact">
        <h4>Contact</h4>
        <ul class="contact-list">
          <li><strong>Email:</strong> <a href="mailto:bailey.doyal0@gmail.com">bailey.doyal0@gmail.com</a></li>
          <li><strong>X:</strong> <a href="https://x.com/Bailey_Doyal" target="_blank" rel="noopener">X.com</a></li>
          <li><strong>YouTube:</strong> <a href="https://www.youtube.com/@BaileyDoyal" target="_blank" rel="noopener">YouTube.com</a></li>
        </ul>

        <!-- Location -->
        <div class="footer-location" style="margin-top:1.5rem;">
          <h4>Location</h4>
          <p style="color:var(--muted); margin:0;">
            Rosamond, California, USA<br>
            Pacific Time Zone (PT)
          </p>
        </div>

        <!-- Follow Me -->
        <div class="footer-follow" style="margin-top:1.5rem;">
          <h4>Follow Me</h4>
          <ul class="social" style="list-style:none; padding:0; margin:0;">
            <li><a href="https://x.com/Bailey_Doyal" target="_blank" rel="noopener">X (Twitter)</a></li>
            <li><a href="https://www.youtube.com/@BaileyDoyal" target="_blank" rel="noopener">YouTube</a></li>
            <li><a href="https://www.linkedin.com/in/baileydoyal" target="_blank" rel="noopener">LinkedIn</a></li>
          </ul>
        </div>
      </div>

      <!-- Right: Quick Links -->
      <div class="footer-links">
        <h4>Quick Links</h4>
        <ul style="list-style:none; padding:0; margin:0;">
          <li><a href="/">Home</a></li>
          <li><a href="/demos">Demos</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
    </div>

    <p class="copyright" style="text-align:center; margin-top:2rem;">
      © <script>document.write(new Date().getFullYear())</script> Bailey Doyal. All rights reserved.
    </p>
  </footer>
</Fragment>
