---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
---
<BaseLayout title="Contact • Bailey Doyal" description="Book Bailey Doyal for your next project.">
  <Fragment slot="header">
    <SiteHeader />
  </Fragment>

  <section class="container">
    <h1>Contact</h1>
    <p>Email works best. Include project details like usage, length, deadlines, and direction preferences.</p>

    <ul class="contact-list">
      <li><strong>Email:</strong> <a href="mailto:bailey.doyal0@gmail.com">bailey.doyal0@gmail.com</a></li>
      <li><strong>X:</strong> <a href="https://x.com/Bailey_Doyal" target="_blank" rel="noopener">X.com</a></li>
      <li><strong>YouTube:</strong> <a href="https://www.youtube.com/@BaileyDoyal" target="_blank" rel="noopener">YouTube.com</a></li>
    </ul>
    <div style="margin-top:1.5rem; margin-bottom:1.5rem;">
      <a href="/quote" class="btn primary">Request a Quote</a>
      <a href="/auditions" class="btn primary" style="margin-left:.75rem;">Request an Audition</a>
    </div>


    <!-- Formspree -->
    <form class="contact-form" action="https://formspree.io/f/mblpglrr" method="POST">
      <label>
        Your name
        <input type="text" name="name" required />
      </label>
      <label>
        Your email
        <input type="email" name="email" required />
      </label>
      <label>
        Message
        <textarea name="message" rows="5" required></textarea>
      </label>

      <!-- optional extras -->
      <input type="hidden" name="_subject" value="New VO inquiry from website" />
      <!-- <input type="hidden" name="_redirect" value="https://your-domain.com/thanks" /> -->

      <button class="btn primary" type="submit">Send</button>
    </form>
  </section>

<Fragment slot="footer">
  <footer class="site-footer contact-footer">
    <div class="container" style="text-align:center; max-width:850px;">

      <h2>Let’s Work Together</h2>
      <p style="color:var(--muted); font-size:1.1rem; margin-bottom:2rem;">
        Thank you for taking the time to reach out. Bailey responds within 24 hours to discuss your project goals,
        deadlines, and creative direction. Whether it’s a commercial, narration, or character performance, 
        your project will receive the same level of professionalism and attention to detail.
      </p>

      <div style="margin-top:1rem;">
        <a href="/demos" class="btn primary">Back to Demos</a>
      </div>

      <hr style="margin:3rem auto 2rem; max-width:600px; border:1px solid var(--border);" />

      <ul class="contact-list" style="list-style:none; padding:0; margin:0;">
        <li><strong>Email:</strong> <a href="mailto:bailey.doyal0@gmail.com">bailey.doyal0@gmail.com</a></li>
        <li><strong>X:</strong> <a href="https://x.com/Bailey_Doyal" target="_blank" rel="noopener">X.com</a></li>
        <li><strong>YouTube:</strong> <a href="https://www.youtube.com/@BaileyDoyal" target="_blank" rel="noopener">YouTube.com</a></li>
      </ul>
    </div>

    <p class="copyright" style="margin-top:2rem;">
      © <script>document.write(new Date().getFullYear())</script> Bailey Doyal. All rights reserved.
    </p>
  </footer>
</Fragment>
